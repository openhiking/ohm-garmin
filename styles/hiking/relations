# Local educational trails, ski routes, others

type=route & route=hiking & (jel~'^k.+' | osmc:symbol~'^blue.+' | jel=t) {
apply {
	set trail_p10_color=B;
	set trail_p10_symbol='${jel}';
	set trail_p10_name='${short_name}'|'${name}'|'${ref}'|'${jel}';
	}
}


type=route & route=hiking & (jel~'^p.+' | osmc:symbol~'^red.+') {
apply {
	set trail_p10_color=R;
	set trail_p10_symbol='${jel}';
	set trail_p10_name='${short_name}'|'${name}'|'${ref}'|'${jel}';
	}
}
type=route & route=hiking & jel!=zut & (jel~'^z.+' | osmc:symbol~'^green.+') {
apply {
	set trail_p10_color=G;
	set trail_p10_symbol='${jel}';
	set trail_p10_name='${short_name}'|'${name}'|'${ref}'|'${jel}';
	}
}
type=route & route=hiking & (jel~'^s.+' | osmc:symbol~'^yellow.+') {
apply {
	set trail_p10_color=Y;
	set trail_p10_symbol='${jel}';
	set trail_p10_name='${short_name}'|'${name}'|'${ref}'|'${jel}';
	}
}

type=route & route=piste & jel=kx {
apply {
	set trail_p10_color=B;
	set trail_p10_symbol='${jel}';
	set trail_p10_name='${short_name}'|'${name}'|'${ref}'|'${jel}';
	}
}


type=route & route=piste & jel=px {
apply {
	set trail_p10_color=R;
	set trail_p10_symbol='${jel}';
	set trail_p10_name='${short_name}'|'${name}'|'${ref}'|'${jel}';
	}
}


